<div class="card link-rule" id="<%= id %>-field">
  <div class="card-divider link-rule-divider">
    <h2 class="card-title flex items-center">
      <span><%== icon("drag-move-2-line") %></span>
      <span class="mb-1 ml-2"><%= t(".link_rule") %></span>

      <button class="button button__sm button__transparent-secondary small alert hollow move-up-link-rule button--title">
        <%== "#{icon("arrow-up-line")} #{t(".up")}" %>
      </button>

      <button class="button button__sm button__transparent-secondary small alert hollow move-down-link-rule button--title">
        <%== "#{icon("arrow-down-line")} #{t(".down")}" %>
      </button>

      <button class="button button__sm button__transparent-secondary small alert hollow remove-link-rule button--title">
        <%= t(".remove") %>
      </button>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.select :operator, Decidim::Nav::LinkRule.operators.map { |key, val| [t(".operator.#{key}"), val] } %>
    </div>

    <div class="row column">
      <%= form.text_field :value %>
    </div>
    <%= form.hidden_field :id %>
    <%= form.hidden_field :rule_type, value: Decidim::Nav::LinkRule.rule_types[:current_page] %>
    <%= form.hidden_field :source, value: Decidim::Nav::LinkRule.sources[:path] %>
    <%= form.hidden_field :position, value: form.object.position || 0 %>
    <%= form.hidden_field :deleted %>
  </div>
</div>

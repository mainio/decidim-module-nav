<%
current_children = children[link.id]
%>

<%= content_tag(home_menu ? :div : nil, class: ("home__menu-element group" if home_menu)) do %>
  <%= link_to translated_attribute(link.href), target: link.target.presence, class: ("button button__text home__menu-element--link" if home_menu) do %>
    <span><%= translated_attribute(link.title) %></span>
  <% end %>

  <% if current_children.present? %>
    <div class="home__menu-submenu">
      <%= render partial: "decidim/nav/shared/action_panel_link", collection: current_children, as: :link, locals: { children: children, home_menu: home_menu } %>
    </div>
  <% end %>
<% end %>

<% if !current_user %>
  <div>
    <%= link_to decidim.new_user_session_path, class: "main-bar__links-desktop__item", "aria-label": t("layouts.decidim.header.log_in") do %>
      <%= icon "login-box-line" %><span><%= t("layouts.decidim.header.log_in") %></span>
    <% end %>
  </div>
<% else %>
  <div class="mobile-dropdown-container">
    <button
      class="main-bar__dropdown-trigger"
      data-navbar-toggle="mobile-account-menu"
      aria-controls="mobile-account-menu"
      aria-expanded="false"
    >
      <% unread_data = current_user_unread_data %>
      <% if unread_data[:unread_items] %>
        <%= content_tag :span, "", class: "main-bar__notification", data: unread_data %>
      <% end %>

      <span class="main-bar__links-desktop__item" data-state="inactive">
        <span class="mobile-account-icon">
          <% if current_user.avatar.attached? %>
            <%= image_tag(
              current_user.attached_uploader(:avatar).variant_url(:thumb),
              alt: t("decidim.author.avatar", name: decidim_sanitize(current_user.avatar.name))
            ) %>
          <% else %>
            <%= icon "user-smile-line" %>
          <% end %>
        </span>
        <span class="mobile-account-label text-sm"><%= t("layouts.decidim.user_profile.account") %></span>
      </span>
      <span class="main-bar__links-desktop__item" data-state="active">
        <span class="mobile-account-icon"><%= icon "close-line" %></span>
        <span class="mobile-account-label text-sm"><%= t(".close") %></span>
      </span>
    </button>
  </div>
<% end %>
